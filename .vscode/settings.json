{
    "[csharp]":
    {
        "editor.codeLens": false,
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false,
        "editor.formatOnType": false
    },

    "files.exclude":
    {
        ".vs": true,
        "build/": true,
        "cmake/": true,
        "src/**/obj/": true,
        "src/**/bin/": true,
        "src/tools/Release/**": true,
        "src/tools/.vs": true,
        "vcpkg/": true,
        "vcpkg_config/": true,
        ".clang-format": true,
        ".clang-tidy": true,
        "vcpkg-configuration.json": true,
        "vcpkg.json": true,
    },

    "search.exclude":
    {
        ".vs": true,
        "build/": true,
        "cmake/": true,
        "src/**/obj/": true,
        "src/**/bin/": true,
        "src/tools/Release/**": true,
        "src/tools/.vs": true,
        "vcpkg/": true,
        "vcpkg_config/": true,
        ".clang-format": true,
        ".clang-tidy": true,
        "vcpkg-configuration.json": true,
        "vcpkg.json": true,
    },

    "files.associations":
    {
        "*.json": "jsonc"
    },
}
